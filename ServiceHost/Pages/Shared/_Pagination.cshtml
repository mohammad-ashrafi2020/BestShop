@model Common.Core.BasePaging

@if (Model.PageCount > 1)
{
    <nav aria-label="Page navigation example mb-0">
        <ul class="pagination justify-content-center mb-0">
            @if (Model.CurrentPage != 1)
            {
                var previousPage = Model.CurrentPage - 1;

                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" onclick="changePage(@previousPage)" tabindex="-1">قبلی</a>
                </li>
            }
            @for (var i = Model.StartPage; i <= Model.EndPage; i++)
            {
                @if (Model.CurrentPage == i)
                {
                    <li class="page-item active">
                        <a class="page-link">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" onclick="changePage(@i)" href="javascript:void(0)">@i</a>
                    </li>
                }
            }
          
            @if (Model.PageCount > Model.CurrentPage)
            {
                var nextPage = Model.CurrentPage + 1;

                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" onclick="changePage(@nextPage)">بعدی</a>
                </li>
            }
        </ul>
    </nav>
}
